#!/bin/bash

MYDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

if [ $# -lt 1 ];
then
	echo
	echo "Missing SRC parameter!!"
	echo "usage: ezcluster <srcfile>"
	echo
	exit 1
fi

SRC=$1
shift

tempfile=$(mktemp /tmp/ezcluster.XXXXX)
trap "rm -f $tempfile" INT TERM HUP EXIT

python ${MYDIR}/../src/ezcluster.py --src $SRC --dump --out $tempfile
err=$?

if [ $err -ne 0 ];
then 
	exit $err
fi

. $tempfile

if [  "${BUILD_SCRIPT}x" != "x" ];
then
	echo
	echo "Let's build with $BUILD_SCRIPT"
	chmod +x $BUILD_SCRIPT
	$BUILD_SCRIPT "$@"
fi

exit $err
